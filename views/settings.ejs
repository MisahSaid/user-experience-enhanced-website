<%- include('./partials/head') %>
<header>
    <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" clip-rule="evenodd" d="M26.3398 8.55508C27.0797 9.29502 27.0797 10.4947 26.3398 11.2346L17.5743 20.0001L26.3398 28.7656C27.0797 29.5055 27.0797 30.7052 26.3398 31.4452C25.5998 32.1851 24.4002 32.1851 23.6602 31.4452L13.555 21.3399C12.815 20.6 12.815 19.4003 13.555 18.6603L23.6602 8.55508C24.4002 7.81514 25.5998 7.81514 26.3398 8.55508Z" fill="white"/>
    </svg>        
    <h1>Story Settings</h1>
</header>

<main>
    <div>
        <h2>Story Settings</h2>
        <p>Hold down the button to hear a preview of the voices</p>

        <div class="speakers">
            <div id="read-self">
                <svg width="38" height="38" viewBox="0 0 38 38" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect x="38" y="34" width="5.65685" height="48.0833" rx="2.82843" transform="rotate(135 38 34)" fill="#1967AE"/>
                    <rect x="3.99994" y="38" width="5.65685" height="48.0833" rx="2.82843" transform="rotate(-135 3.99994 38)" fill="#2382DA"/>
                </svg>
                <p>read aloud yourself</p>
            </div>

            <div id="speaker">
                <% speaker.forEach(function(speaker) { %>
                    <div class="speaker-item">
                        <h3><%= speaker.name %></h3>
                        <p><%= speaker.gender %></p>
                    </div>
                <% }) %>      
            </div>
        </div>
    </div>
    

    <h4>Pick a background</h4>
    <p>Pick a background during the story</p>


    <!-- POST -->
    <%= theme %>
    <form method="POST" action="/settings" id="thema">
        <label for="1">
            <div class="1"><img src="./assets/night.svg" alt="night time theme"></div>
            <input type="radio" name="thema" id="1" value="dark">
        </label>

        <label for="2">
            <div><img src="./assets/day.svg" alt="day time theme"></div>
            <input type="radio" name="thema" id="2" value="day">
        </label>

        <label for="3">
            <div><img src="./assets/sunset.svg" alt="sunset theme"></div>
            <input type="radio" name="thema" id="3" value="sunset">
        </label>

        <button type="submit">set</button>
    </form>

    <!-- volume -->
    <h5>Volume </h1>
    <input class="volume-slider" type="range" min="0" max="100" value="50">   
</main>

<%- include('./partials/footer') %>